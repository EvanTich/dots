#!/bin/sh

# TODO: option to override download archive
# TODO: only download thumbnail
TEMP_PATH="/tmp"


retry() {
  local retries=$1
  shift

  local counter=0
  until "$@"; do
    exit=$?
    counter=$(($counter + 1))
    if [ $counter -lt $retries ]; then
      echo "Retrying command... ($counter/$retries) $exit"
      sleep 2
    else
      echo "Command failed $retries times, skipping."
      return $exit
    fi
  done
  return 0
}

download_thumbnail() {
  url="$1"
  # download thumbnail
  echo "Downloading thumbnail for $url"
  curl "$(youtube-dl --get-thumbnail -- "$url")" --output "$TEMP_PATH/artwork.tmp"
  convert "$TEMP_PATH/artwork.tmp" -thumbnail '720x720^' -gravity center -extent 720x720 "$TEMP_PATH/artwork.jpg"
}

download() {
  url="$1"
  thumb="$2"
  tracknum="$3"

  echo "Downloading $url"
  exit=1
  until [ $exit -eq 0 ]; do
    download="$(youtube-dl --no-playlist --download-archive "~/Music/archive.txt" --add-metadata --output "%(artist)s - %(title)s.%(ext)s" -f "bestaudio[ext=m4a]" -- "$url")"
    exit=$?
    if [ $exit -ne 0 ]; then
      echo "Failed to download video, retrying."
      sleep 2
    fi
  done
  file="$(echo "$download" | grep Destination)"
  file="${file#*Destination: }"

  if [ -z "$file" ]; then
    echo "Video already downloaded. Skipping."
  elif [[ $thumb -eq 1 ]]; then
    retry 5 download_thumbnail "$url"

    # embed the thumbnail
    echo "Embedding thumbnail in \"$file\""
    if [ -z ${tracknum+x} ]; then
      atomicparsley "$file" --overWrite --artwork "$TEMP_PATH/artwork.jpg"
    else
      atomicparsley "$file" --overWrite --artwork "$TEMP_PATH/artwork.jpg" --tracknum "$tracknum"
    fi
  fi
}

thumbnail=1
numbering=0
for arg in "$@"; do
  case "$arg" in
    "--thumbnails") thumbnail=1 ;;
    "--no-thumbnails") thumbnail=0 ;;
    "--tracknums") numbering=1 ;;
    "--no-tracknums") numbering=0 ;;
    *"playlist"*)
      touch "$TEMP_PATH/playlist"
      youtube-dl --flat-playlist --skip-download "$arg" --get-id > "$TEMP_PATH/playlist"
      n=1
      while read id; do
        if [[ $numbering -eq 1 ]]; then
          download "$id" "$thumbnail" "$n"
        else
          download "$id" "$thumbnail"
        fi
        n=$((n+1))
      done < "$TEMP_PATH/playlist"
      ;;
    *) download "$arg" "$thumbnail" ;;
  esac
done

