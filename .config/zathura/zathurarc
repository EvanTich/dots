# Zathura configuration file
# See man `man zathurarc'

# fit-width mode by default
set adjust-open "best-fit"

# stop at page boundries
set scroll-page-aware "true"
set scroll-full-overlap 0.01
set scroll-step 100

# show a tilde instead of full home path
set statusbar-home-tilde "true"
set statusbar-h-padding 0
set statusbar-v-padding 0
set page-padding 2

# color
set recolor true
set default-bg "#111111"
set default-fg "#dedede"
set statusbar-bg "#111111"
set statusbar-fg "#dedede"
set recolor-darkcolor "#dedede"
set recolor-lightcolor "#111111"
