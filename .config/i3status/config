# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
    colors = true
    interval = 5
    color_good = "#00C600"
    color_bad = "#C6C600"
    color_degraded = "#C60000"
}

# order += "window"
order += "cpu_usage"
order += "memory"
order += "disk /"
order += "ethernet _first_"
# order += "battery all"
order += "tztime local"

#window {
#    format = " \[{title}\] "
#}

cpu_usage {
    format = " cpu  %usage "
}

memory {
    format = " mem %used / %total (%percentage_used) "
    threshold_degraded = "1G"
    format_degraded = " mem low %free "
}

load {
    format = " load %1min "
    # max_threshold = 0.3
}

disk "/" {
    # format = " hdd %avail "
    format = " ⛁ %avail "
}

ethernet _first_ {
# if you use %speed, i3status requires root privileges
    format_up = " E: %ip "
    format_down = " no lan "
}

battery all {
    format = " %status %percentage "
    format_down = "No battery"
    last_full_capacity = true
    integer_battery_capacity = true
    status_chr = "⚡"
    status_bat = ""
    status_unk = ""
    status_full = "☻"
    low_threshold = 15
    threshold_type = time
}

tztime local {
    format = " 📅 %Y-%m-%d 🕘 %H:%M "
    # format = " 📅 %m-%d 🕘 %H:%M:%S "
}
