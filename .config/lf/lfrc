# basic stuff
set hidden true
set ignorecase true
set icons true
set ifs "\n"
set shellopts '-eu'
set scrolloff 5

set cleaner '~/.config/lf/cleaner'
set previewer '~/.config/lf/scope'

# functions
cmd mkdir ${{
    printf "Directory Name: "
    read ans
    mkdir $ans
}}

cmd mkfile ${{
    printf "File Name: "
    read ans
    $EDITOR $ans
}}

# basic mappings
map . set hidden!
map DD delete
map <enter> open
map md mkdir
map mf mkfile

# shortcuts
map gd cd /data
map gu cd /mnt/usb
map gD cd ~/Downloads
map gc cd ~/.config
map gb cd ~/.local/bin
