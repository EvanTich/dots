###########################
#####     GENERAL     #####
###########################

include /etc/sway/config.d/*

# Set mod key (Mod1=<Alt>, Mod4=<Super>)
set $mod Mod4

# set default desktop layout (default is tiling)
# workspace_layout tabbed <stacking|tabbed>

# Configure border style <normal|1pixel|pixel xx|none|pixel>
default_border pixel 1
default_floating_border pixel 1
hide_edge_borders none

# Font for window titles. Will also be used by the bar unless specified otherwise.
font pango:FantasqueSansMono Nerd Font Mono 14px

# Use Mouse+$mod to drag floating windows
floating_modifier $mod

# Window focus
focus_follows_mouse no

###############################
#####     KEYBINDINGS     #####
###############################

# change borders
bindsym $mod+u border none
bindsym $mod+y border pixel 1
bindsym $mod+n border normal

# start a terminal
bindsym $mod+Return exec kitty

# kill focused window
bindsym $mod+Shift+q kill

set $menu wmenu-run

# program launcher
bindsym $mod+d exec --no-startup-id $menu

# audio
bindsym $mod+Ctrl+m exec pavucontrol

# applications
bindsym $mod+F1 exec pgrep ncmpcpp && swaymsg '[title="ncmpcpp"] focus' || kitty --class ncmpcpp --hold ncmpcpp
bindsym $mod+Shift+F1 exec nemo
bindsym $mod+F2 exec firefox
bindsym $mod+F3 exec codium --ozone-platform-hint=auto --enable-features=WaylandWindowDecorations
bindsym $mod+Shift+F3 exec obsidian --ozone-platform-hint=auto --enable-features=WaylandWindowDecorations
bindsym $mod+F4 exec discord --ozone-platform-hint=auto --enable-features=WaylandWindowDecorations --ignore-gpu-blocklist --disable-features=UseOzonePlatform --enable-features=VaapiVideoDecoder --use-gl=desktop --enable-gpu-rasterization --enable-zero-copy
# bindsym $mod+Shift+F4 exec slack
bindsym $mod+F5 exec steam
bindsym $mod+F6 exec qbittorrent
bindsym $mod+F7 exec pgrep newsboat && swaymsg '[title="newsboat"] focus' || kitty --class newsboat --hold newsboat

# volume keys
bindsym XF86AudioRaiseVolume exec --no-startup-id wpctl set-volume -l 1.5 @DEFAULT_AUDIO_SINK@ 10%+
bindsym XF86AudioLowerVolume exec --no-startup-id wpctl set-volume @DEFAULT_AUDIO_SINK@ 10%-
bindsym Shift+XF86AudioRaiseVolume exec --no-startup-id wpctl set-volume -l 1.5 @DEFAULT_AUDIO_SINK@ +1%
bindsym Shift+XF86AudioLowerVolume exec --no-startup-id wpctl set-volume @DEFAULT_AUDIO_SINK@ -1%
bindsym XF86AudioMute exec --no-startup-id wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle
# TODO: no way to do this in wpctl except for parsing through complex output
# bindsym Shift+XF86AudioMute exec --no-startup-id pactl list short sinks | cut -f1 | xargs -n1 -I {} -- pactl set-sink-volume {} 0%

# brightness keys
bindsym XF86MonBrightnessUp exec --no-startup-id brightnessctl set +10
bindsym XF86MonBrightnessDown exec --no-startup-id brightnessctl set -10
bindsym Shift+XF86MonBrightnessUp exec --no-startup-id brightnessctl set +2
bindsym Shift+XF86MonBrightnessDown exec --no-startup-id brightnessctl set -2

# media keys
bindsym XF86AudioPlay exec --no-startup-id playerctl play-pause
bindsym XF86AudioPause exec --no-startup-id playerctl play-pause
bindsym XF86AudioPrev exec --no-startup-id playerctl previous
bindsym XF86AudioNext exec --no-startup-id playerctl next

# screenshotting
bindsym Print exec --no-startup-id screenshot fullscreen-copy
bindsym $mod+Print exec --no-startup-id screenshot window-copy
bindsym $mod+Shift+Print exec --no-startup-id screenshot area
bindsym $mod+Shift+s exec --no-startup-id screenshot area-copy

# change focus
bindsym $mod+j focus left
bindsym $mod+k focus down
bindsym $mod+l focus up
bindsym $mod+semicolon focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+j move left
bindsym $mod+Shift+k move down
bindsym $mod+Shift+l move up
bindsym $mod+Shift+semicolon move right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split orientation
bindsym $mod+h split h
bindsym $mod+v split v
bindsym $mod+q split toggle

# toggle fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# toggle sticky
bindsym $mod+Ctrl+s sticky toggle

# focus the parent container
bindsym $mod+a focus parent

# move the currently focused window to the scratchpad
bindsym $mod+Shift+minus move scratchpad

# Show the next scratchpad window or hide the focused scratchpad window.
# If there are multiple scratchpad windows, this command cycles through them.
bindsym $mod+minus scratchpad show

# reload the configuration file
bindsym $mod+Shift+c reload

# restart inplace (preserves your layout/session)
bindsym $mod+Shift+r restart

# Lock screen
# bindsym $mod+9 exec --no-startup-id blurlock

# exit sway (logs you out of your X session)
bindsym $mod+Shift+e exec --no-startup-id prompt 'Do you really want to exit?' 'swaymsg exit'

#################################
#####     BINDING MODES     #####
#################################

# Set shut down, restart and locking features
set $mode_system (l)ock, (e)xit, (s)uspend, (r)eboot, (Shift+s)hutdown
bindsym $mod+0 mode "$mode_system"
mode "$mode_system" {
    bindsym l exec --no-startup-id blurlock, mode "default"
    bindsym e exec --no-startup-id swaymsg exit, mode "default"
    bindsym s exec --no-startup-id blurlock && systemctl suspend, mode "default"
    #bindsym h exec --no-startup-id blurlock && systemctl hibernate, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym Shift+s exec --no-startup-id systemctl poweroff, mode "default"

    # exit system mode: "Enter" or "Escape"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# Resize window (you can also use the mouse for that)
bindsym $mod+r mode "resize"
mode "resize" {
    # left  -> shrink the window‚Äôs width.
    # right -> grow   the window‚Äôs width.
    # up    -> shrink the window‚Äôs height.
    # down  -> grow   the window‚Äôs height.
    bindsym j resize shrink width 5 px or 5 ppt
    bindsym k resize grow height 5 px or 5 ppt
    bindsym l resize shrink height 5 px or 5 ppt
    bindsym semicolon resize grow width 5 px or 5 ppt

    # and arrow keys
    bindsym Left resize shrink width 5 px or 5 ppt
    bindsym Down resize grow height 5 px or 5 ppt
    bindsym Up resize shrink height 5 px or 5 ppt
    bindsym Right resize grow width 5 px or 5 ppt

    # double shrinking/growing when holding shift
    bindsym Shift+j resize shrink width 10 px or 10 ppt
    bindsym Shift+k resize grow height 10 px or 10 ppt
    bindsym Shift+l resize shrink height 10 px or 10 ppt
    bindsym Shift+semicolon resize grow width 10 px or 10 ppt

    # and arrow keys
    bindsym Shift+Left resize shrink width 10 px or 10 ppt
    bindsym Shift+Down resize grow height 10 px or 10 ppt
    bindsym Shift+Up resize shrink height 10 px or 10 ppt
    bindsym Shift+Right resize grow width 10 px or 10 ppt

    # exit resize mode: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

